	public static double f (double x) {
		
		double y = (x -  17) * (x + 12) / (x * x + 0.1);
		
		return y;
	}
	
	
	public static double g (double x) {
		
		double y;
		
		y = x * Math.sin(x);
		
		return y;
	}
	
	
	public static void printTable(double xMin, double xMax, int width){
		
		double x = xMin;
		
		printHeader(width);
		
		printDivider(width);
		
		printLine(x, width);
		printBody(xMin, xMax, width);
		
		
		
	}
	
