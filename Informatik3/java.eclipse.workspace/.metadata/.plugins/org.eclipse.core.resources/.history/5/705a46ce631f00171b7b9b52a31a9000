	protected static void printBody(double xMin, double xMax, int width){
		
	}
	
	protected static void printLine(double x, int width){
		
	}
	
	protected static void printDivider(int width){
		PrintWriter lineOut = new PrintWriter(System.out, true);
		for (int x = 0; x < width; x++) {
			lineOut.print("- ");
		}
		
		lineOut.println();
	}
	
