package in3.a05;

import java.io.PrintWriter;
import java.util.Locale;

import lernhilfe2013ws.io.ConsolePrinter;

public class FirstIO {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		
		ConsolePrinter con = ConsolePrinter.createInstance();
		PrintWriter out = new PrintWriter(con, true);
		
		
		writeRandomMixedNumbers(10, 5, out);
	}
	
	public static void writeRandomMixedNumbers(int numberCount, int width, PrintWriter out){
		
		if (numberCount % 2 != 0){
			numberCount--;
		}
		
		StringBuilder sb = new StringBuilder("%"));
		sb.append(width);
		sb.append("d");
		String format = sb.toString()		
		
		for(int i = 1; i <= numberCount; i++){
			
			int x = (int) Math.floor(Math.random() * 101);
			out.printf(format, width, x);
		}
	}

}
